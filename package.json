{
  "name": "spearmint",
  "version": "0.14.0",
  "description": "An open-source developer tool that simplifies testing and hopes to help increase awareness about web accessibility.",
  "main": "public/electron.jsx",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "start": "electron-forge start",
    "start-dev": "concurrently \"electron .\" \"nodemon server/server.js\"",
    "watch": "webpack --config webpack.config.ts --watch",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev": "npm run watch & npm run start-dev",
    "rebuild": "electron-rebuild -f -w node-pty",
    "docker": "electron . --no-sandbox",
    "mac:installer": "electron-builder --mac",
    "win:installer": "electron-builder --win",
    "linux:installer": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "spearmint",
    "productName": "spearmint",
    "mac": {
      "mergeASARs": "false",
      "icon": "./public/icon.icns",
      "category": "public.app-category.utilities",
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "universal"
        ]
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "sign": false,
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
        "width": "400",
        "height": "300"
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 300,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "./public/icon.png"
    },
    "linux": {
      "icon": "./public/icon.png",
      "target": [
        "deb"
      ],
      "category": "Development"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "./server/**/*",
      "*.js",
      "./src/**/*",
      "package.json",
      ".env"
    ],
    "directories": {
      "buildResources": "public",
      "app": "."
    }
  },
  "keywords": [],
  "author": {
    "name": "team spearmint",
    "url": "https://www.spearmintjs.com/",
    "email": "oslabsspearmint@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@capacitor/core": "^5.3.0",
    "@capacitor/screen-reader": "^4.1.2",
    "@codemirror/lang-javascript": "^6.1.2",
    "@codemirror/view": "^6.11.2",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.5",
    "@mui/styles": "^5.11.2",
    "@mui/types": "^7.2.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/babel-core": "^6.25.7",
    "@types/jest": "^29.4.0",
    "@uiw/react-codemirror": "^4.19.7",
    "babel-loader": "^9.1.2",
    "bcryptjs": "^2.4.3",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "classnames": "^2.3.2",
    "codemirror": "^6.0.1",
    "concurrently": "^7.6.0",
    "cookie-parser": "^1.4.6",
    "css-loader": "^6.7.3",
    "depcheck": "^1.4.3",
    "dotenv": "^16.0.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "fix-path": "^3.0.0",
    "jest-environment-jsdom": "^29.3.1",
    "js-beautify": "^1.14.7",
    "mongoose": "^6.8.4",
    "node-abi": "^3.40.0",
    "node-fetch": "^3.3.0",
    "node-pty": "^0.10.1",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "react": "^17.0.2",
    "react-autosuggest": "^10.1.0",
    "react-dom": "^17.0.2",
    "react-draggable": "^4.4.5",
    "react-icons": "^4.7.1",
    "react-modal": "^3.16.1",
    "react-transition-group": "^4.4.5",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "save-dev": "0.0.1-security",
    "snyk": "^1.1087.0",
    "spectron": "^19.0.0",
    "style-loader": "^3.3.1",
    "uid": "^2.0.2",
    "uuid": "^9.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "xterm": "^5.1.0",
    "xterm-addon-fit": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-typescript": "^7.18.6",
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-dmg": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@testing-library/user-event": "^14.4.3",
    "@types/babel__core": "^7.20.0",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/react-autosuggest": "^10.1.6",
    "@types/react-modal": "^3.16.0",
    "@types/webpack-dev-server": "^4.7.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "axe-core": "^4.6.2",
    "electron": "^24.3.0",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "2.8.3",
    "regenerator-runtime": "^0.13.11",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-dev-server": "^4.11.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "spearmint"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Spearmint Development Team"
            }
          }
        }
      ]
    }
  }
}
